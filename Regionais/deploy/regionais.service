[Unit]
Description=Simulador de Regionais
After=network.target

[Service]
Type=simple
Restart=always
WorkingDirectory=/home/regionais/app/
User=regionais
ExecStart=/bin/bash -c '/home/regionais/.virtualenvs/bin/gunicorn app:app -b 0.0.0.0:8888 -k uvicorn.workers.UvicornWorker -w 4 --graceful-timeout 0 --access-logfile /home/regionais/app/app.log 2>&1'

[Install]
WantedBy=multi-user.target

